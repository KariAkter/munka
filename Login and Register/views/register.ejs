
<link rel="stylesheet" type="text/css" href="/css/login.css" />


<form id="createAccount" action="/register" method="POST">
    <h1 class="form__title">Fiók létrehozása</h1>
    <div class="form__message form__message--error"></div>
    <div class="form__input-group">
        <input type="text" name="name" id="signupUsername" class="form__input" autofocus placeholder="Felhasználónév">
        <div class="form__input-error-message"></div>
    </div>
    <div class="form__input-group">
        <input type="text" name="email" class="form__input" autofocus placeholder="Email">
        <div class="form__input-error-message"></div>
    </div>
    <div class="form__input-group">
        <input type="password" name="password" class="form__input" autofocus placeholder="Jelszó">
        <div class="form__input-error-message"></div>
    </div>
    <button class="form__button" type="submit">Folytatás</button>
    <p class="form__text">
        <a class="form__link" href="/login" id="linkLogin">Már rendelkezel fiókkal? Jelentkezz be!</a>
    </p>
</form>